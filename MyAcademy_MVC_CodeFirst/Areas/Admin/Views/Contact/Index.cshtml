@model List<MyAcademy_MVC_CodeFirst.Data.Entities.Contact>
@{
    ViewBag.Title = "Gelen Mesajlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h4 mb-0 fw-bold text-dark">İletişim Mesajları</h1>
            <p class="text-muted small mb-0">Web sitenizden gelen tüm iletişim formlarını buradan takip edebilirsiniz.</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light bg-opacity-50 border-bottom">
                    <tr>
                        <th class="ps-4 py-3 text-muted fw-bold small text-uppercase">Gönderen</th>
                        <th class="py-3 text-muted fw-bold small text-uppercase">Konu / Sigorta</th>
                        <th class="py-3 text-muted fw-bold small text-uppercase">Tarih</th>
                        <th class="py-3 text-muted fw-bold small text-uppercase text-center">Durum</th>
                        <th class="py-3 text-muted fw-bold small text-uppercase text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-semibold text-dark">@item.Name</div>
                                <div class="text-muted small">@item.Email</div>
                            </td>
                            <td>
                                <div class="fw-bold text-primary">@item.Subject</div>
                                <div class="badge bg-secondary bg-opacity-10 text-secondary small">@item.InsuranceType</div>
                            </td>
                            <td class="text-muted small">@item.SendDate.ToString("dd MMM yyyy HH:mm")</td>
                            <td class="text-center">
                                @if (item.IsRead)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success px-2 py-1">Okundu</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning px-2 py-1">Yeni</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="/Admin/Contact/MessageDetails/@item.ContactID" class="btn btn-sm btn-outline-info border-0 p-2 rounded-circle" title="Oku">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/Admin/Contact/DeleteContact/@item.ContactID" onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?')" class="btn btn-sm btn-outline-danger border-0 p-2 rounded-circle" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
