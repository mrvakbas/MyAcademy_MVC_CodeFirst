@model MyAcademy_MVC_CodeFirst.Data.Entities.Contact
@{
    ViewBag.Title = "Mesaj Detayı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="mb-4">
        <a href="/Admin/Contact/Index" class="btn btn-link text-decoration-none p-0 mb-2">
            <i class="fas fa-arrow-left me-1"></i> Listeye Geri Dön
        </a>
        <h1 class="h4 mb-0 fw-bold text-dark">Mesaj Detayı</h1>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm p-4 mb-4">
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-3">
                    <h5 class="fw-bold mb-0">
                        @Model.Subject
                    </h5>
                    <span class="text-muted small">@Model.SendDate.ToString("F")</span>
                </div>

                <div class="mb-4" style="line-height: 1.6; color: #444;">
                    @Model.Message
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm p-4">
                <h6 class="fw-bold mb-3 border-bottom pb-2">Gönderen Bilgileri</h6>
                <div class="mb-3">
                    <label class="text-muted small d-block">Ad Soyad:</label>
                    <span class="fw-semibold">@Model.Name</span>
                </div>
                <div class="mb-3">
                    <label class="text-muted small d-block">E-Posta:</label>
                    <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                </div>
                <div class="mb-3">
                    <label class="text-muted small d-block">Telefon:</label>
                    <span>@Model.Phone</span>
                </div>
                <div class="mb-0">
                    <label class="text-muted small d-block">İlgilenilen Sigorta:</label>
                    <span class="badge bg-primary bg-opacity-10 text-primary">@Model.InsuranceType</span>
                </div>
            </div>
        </div>
    </div>
</div>