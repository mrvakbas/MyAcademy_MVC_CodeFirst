@model Policy

@{
    ViewBag.Title = "Yeni Poliçe Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
            <h1 class="h4 mb-0 fw-bold text-dark">Poliçe Yönetimi</h1>
            <span class="badge bg-primary text-white ms-3 shadow-sm px-3 py-2" style="background-color: #4e73df !important;">Yeni Kayıt</span>
        </div>

        <div class="d-flex align-items-center bg-white px-3 py-2 rounded-3 shadow-sm border border-primary border-opacity-25">
            <span class="material-symbols-outlined text-primary me-2" style="font-size: 20px;">location_on</span>
            <div class="lh-1">
                <small class="d-block text-muted fw-bold" style="font-size: 9px; letter-spacing: 0.5px;">İŞLEM BÖLGESİ</small>
                <span class="fw-bold text-primary small">@ViewBag.UserCity</span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 overflow-hidden">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="mb-0 fw-bold text-muted text-uppercase small" style="letter-spacing: 1px; display: flex; align-items: center;">
                        <svg width="18" height="18" fill="none" stroke="#4e73df" viewBox="0 0 24 24" class="me-2">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Poliçe Detaylarını Girin
                    </h6>
                </div>

                <div class="card-body p-4 pt-2">
                    @using (Html.BeginForm("CreatePolicy", "Policy", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @* Otomatik Atanan Gizli Alanlar *@
                        @Html.HiddenFor(x => x.PolicyNumber, new { @value = ViewBag.NextPolicyNumber })
                        @Html.HiddenFor(x => x.City, new { @value = ViewBag.UserCity })

                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <div class="alert alert-info border-0 shadow-sm d-flex align-items-center" role="alert" style="background-color: #f8f9fc; border-left: 4px solid #4e73df !important;">
                                    <i class="fas fa-user-shield me-3 fa-lg text-primary"></i>
                                    <div>
                                        <small class="d-block fw-bold text-uppercase text-primary" style="font-size: 10px;">Oluşturan Yetkili & Konum</small>
                                        <strong class="text-dark">@User.Identity.Name</strong>
                                        <span class="text-muted mx-2">|</span>
                                        <span class="badge bg-white text-primary border shadow-sm">@ViewBag.UserCity Şubesi</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label small fw-semibold text-muted text-uppercase">Poliçe Bedeli (₺)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0 text-muted">₺</span>
                                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control border-start-0", type = "number", step = "0.01", placeholder = "0.00", required = "required" })
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label small fw-semibold text-muted text-uppercase">Sigortalı Müşteri</label>
                                @Html.DropDownListFor(x => x.AppUserId, (SelectList)ViewBag.AppUserId, "-- Müşteri Seçiniz --", new { @class = "form-select", required = "required" })
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label small fw-semibold text-muted text-uppercase">Poliçe Kategorisi</label>
                                @Html.DropDownListFor(x => x.CategoryId, (SelectList)ViewBag.CategoryId, "-- Kategori Seçiniz --", new { @class = "form-select", required = "required" })
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label small fw-semibold text-muted text-uppercase">Başlangıç Tarihi</label>
                                @Html.TextBoxFor(x => x.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                            </div>

                            <div class="col-md-12 mb-4">
                                <label class="form-label small fw-semibold text-muted text-uppercase">Bitiş Tarihi</label>
                                @Html.TextBoxFor(x => x.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                            <a href="/Admin/Policy/Index" class="btn btn-light btn-sm px-4 fw-semibold text-muted border">Vazgeç</a>
                            <button type="submit" class="btn btn-primary btn-sm px-4 shadow-sm fw-semibold d-flex align-items-center" style="background-color: #4e73df !important; border: none;">
                                <svg width="16" height="16" fill="none" stroke="white" viewBox="0 0 24 24" class="me-2">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Poliçeyi Onayla ve Kaydet
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(145deg, #ffffff, #f8f9fc);">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3 text-primary">
                        <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <h6 class="mb-0 fw-bold">Sistem Notları</h6>
                    </div>
                    <hr class="text-muted opacity-25">

                    <ul class="list-unstyled small text-muted">
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-map-marker-alt text-danger me-2 mt-1"></i>
                            <span><b>Bölgesel Kayıt:</b> Bu poliçe, profilinizde tanımlı olan <b>@ViewBag.UserCity</b> şehri verisiyle ilişkilendirilerek kaydedilecektir.</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-fingerprint text-primary me-2 mt-1"></i>
                            <span><b>Dijital Mühür:</b> Poliçe numarası otomatik olarak <b>@User.Identity.Name</b> adına mühürlenmektedir.</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-shield-alt text-success me-2 mt-1"></i>
                            <span><b>Veri Güvenliği:</b> Manuel şehir ve numara girişi, standartizasyon gereği devre dışıdır.</span>
                        </li>
                    </ul>

                    <div class="mt-4 p-3 rounded-3 border border-dashed border-secondary border-opacity-25 bg-white shadow-sm">
                        <p class="small text-muted mb-0 italic">
                            <i class="fas fa-quote-left me-1"></i>
                            İşlem yapılan lokasyon: <b>@ViewBag.UserCity</b>. Bu bilgi istatistiksel raporlarda kullanılacaktır.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus, .form-select:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.1);
    }

    .form-label {
        letter-spacing: 0.5px;
        font-size: 11px !important;
    }

    .card {
        border-radius: 12px;
    }

    .btn {
        border-radius: 8px;
    }
</style>