@using MyAcademy_MVC_CodeFirst.Data.Entities
@model List<AppRole>

@{
    ViewBag.Title = "Roller Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-4">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="h4 mb-0 fw-bold">Roller</h1>
            <span class="badge bg-primary">@(Model != null ? Model.Count : 0)</span>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center gap-2" role="alert">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>@TempData["Success"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center gap-2" role="alert">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <span>@TempData["Error"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || Model.Count == 0)
    {
        <div class="text-center py-5">
            <svg class="text-muted mb-3" width="64" height="64" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
            <p class="text-muted">Henüz rol oluşturulmamış</p>
        </div>
    }
    else
    {
        <div class="row">
            @{
                int count = 0;
            }
            @foreach (var role in Model)
            {
                count++;
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex gap-3 mb-3">
                                <div class="bg-primary bg-opacity-10 p-2 rounded">
                                    <svg class="text-primary" width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" />
                                    </svg>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">@count - @role.Name</h5>
                                    <small class="text-muted">ID: @(role.Id.Length > 8 ? role.Id.Substring(0, 8) : role.Id)...</small>
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-auto mb-3">
                                <a href="@Url.Action("Update", "Role", new { area = "Admin", id = role.Id })" class="btn btn-outline-primary btn-sm d-flex align-items-center justify-content-center gap-2">
                                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                    Düzenle
                                </a>

                                <a href="@Url.Action("Delete", "Role", new { area = "Admin", id = role.Id })"
                                   onclick="return confirm('Bu rolü silmek istediğinize emin misiniz?')"
                                   class="btn btn-outline-danger btn-sm d-flex align-items-center justify-content-center gap-2">
                                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                    Sil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="d-flex justify-content-end mt-4">
        <a href="@Url.Action("Create", "Role", new { area = "Admin" })" class="btn btn-primary d-flex align-items-center gap-2">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Yeni Rol Oluştur
        </a>
    </div>
</div>