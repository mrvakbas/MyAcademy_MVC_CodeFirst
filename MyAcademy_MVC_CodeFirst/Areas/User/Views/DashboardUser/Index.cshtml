@model List<MyAcademy_MVC_CodeFirst.Data.Entities.Policy>
@{
    ViewBag.Title = "Kullanıcı Özeti";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid p-4">
    <div class="row mb-4 align-items-end">
        <div class="col-auto">
            <p class="text-muted small fw-semibold text-uppercase mb-1">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</p>
            <h2 class="h2 fw-bold mb-0 text-dark">Hoş Geldiniz, @User.Identity.Name!</h2>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100 card-animate border-start border-primary border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="bg-primary bg-opacity-10 p-2 rounded">
                            <svg class="text-primary" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                            </svg>
                        </div>
                    </div>
                    <p class="text-muted small fw-semibold text-uppercase mb-1">Toplam Poliçe</p>
                    <h4 class="fw-bold mb-0 text-dark">@ViewBag.TotalPolicies Adet</h4>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100 card-animate border-start border-success border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="bg-success bg-opacity-10 p-2 rounded">
                            <svg class="text-success" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                    </div>
                    <p class="text-muted small fw-semibold text-uppercase mb-1">Toplam Ödeme</p>
                    <h4 class="fw-bold mb-0 text-dark">@ViewBag.TotalRevenue.ToString("C2")</h4>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100 card-animate border-start border-info border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="bg-info bg-opacity-10 p-2 rounded">
                            <svg class="text-info" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                        </div>
                    </div>
                    <p class="text-muted small fw-semibold text-uppercase mb-1">Aktif Koruma</p>
                    <h4 class="fw-bold mb-0 text-dark">@ViewBag.ActivePolicies Aktif</h4>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100 card-animate border-start border-danger border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="bg-danger bg-opacity-10 p-2 rounded">
                            <svg class="text-danger" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                    </div>
                    <p class="text-muted small fw-semibold text-uppercase mb-1">Süresi Dolan</p>
                    <h4 class="fw-bold mb-0 text-dark">@ViewBag.ExpiredPolicies Adet</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-dark">Son Poliçelerim</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr class="text-muted small">
                        <th class="ps-4">POLİÇE NO</th>
                        <th>KATEGORİ</th>
                        <th>BEDEL</th>
                        <th>DURUM</th>
                        <th class="text-end pe-4">İŞLEM</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-dark">#@item.PolicyNumber</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary bg-opacity-10 text-secondary fw-semibold px-2 py-1" style="font-size: 11px;">
                                    @item.Category.Name
                                </span>
                            </td>
                            <td class="fw-bold text-dark">@item.Price.ToString("C2")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3" style="font-size: 11px;">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3" style="font-size: 11px;">Pasif</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a href="/User/PolicyUser/Details/@item.Id" class="btn btn-sm btn-light border shadow-sm">
                                    Detayları Gör
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .card-animate {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card-animate:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
        }

    .table thead th {
        font-weight: 700;
        text-transform: uppercase;
        font-size: 11px;
        letter-spacing: 0.5px;
    }
</style>