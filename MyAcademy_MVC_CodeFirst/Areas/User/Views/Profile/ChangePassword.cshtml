@model MyAcademy_MVC_CodeFirst.Areas.User.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Şifre Değiştir";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-lg-6 mx-auto">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold text-dark">
                        <i class="fas fa-key me-2 text-primary"></i>Şifre Değiştir
                    </h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(true, "", new { @class = "mb-0" })
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mevcut Şifre <span class="text-danger">*</span></label>
                            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", placeholder = "Mevcut şifrenizi girin" })
                            @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger small d-block mt-1" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Yeni Şifre <span class="text-danger">*</span></label>
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "En az 6 karakter" })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small d-block mt-1" })
                            <small class="text-muted">Şifre en az 6 karakter olmalıdır</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Yeni Şifre Tekrar <span class="text-danger">*</span></label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Yeni şifrenizi tekrar girin" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small d-block mt-1" })
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-check me-2"></i>Şifreyi Değiştir
                            </button>
                            <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0 mt-3">
                <div class="card-body">
                    <h6 class="fw-bold mb-2"><i class="fas fa-info-circle text-info me-2"></i>Güvenlik İpuçları</h6>
                    <ul class="small text-muted mb-0">
                        <li>Şifreniz en az 6 karakter içermelidir</li>
                        <li>Güçlü bir şifre için büyük harf, küçük harf, rakam ve özel karakter kullanın</li>
                        <li>Şifrenizi düzenli olarak değiştirin</li>
                        <li>Şifrenizi başkalarıyla paylaşmayın</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>