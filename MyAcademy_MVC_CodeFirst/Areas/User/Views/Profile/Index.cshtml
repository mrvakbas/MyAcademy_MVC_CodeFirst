@model MyAcademy_MVC_CodeFirst.Areas.User.Models.UserProfileViewModel
@{
    ViewBag.Title = "Profilim";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold text-dark">
                        <i class="fas fa-user-circle me-2 text-primary"></i>Profil Bilgilerim
                    </h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.UserName)</label>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @readonly = "readonly", @disabled = "disabled" })
                                <small class="text-muted">Kullanıcı adı değiştirilemez</small>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.Email)</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.FirstName)</label>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.LastName)</label>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.PhoneNumber)</label>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", type = "tel" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                            </button>
                            <a href="@Url.Action("ChangePassword")" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-key me-2"></i>Şifre Değiştir
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
