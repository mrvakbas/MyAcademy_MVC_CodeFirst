
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Kullanıcı Paneli - MyAcademy</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --bs-primary: #135bec;
            --primary-color: #135bec;
            --background-light: #f6f6f8;
        }

        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background-color: var(--background-light);
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 256px;
            height: 100vh;
            background: white;
            border-right: 1px solid #e5e7eb;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 1.5rem 1rem;
            border-bottom: 1px solid #e5e7eb;
            background: rgba(19, 91, 236, 0.05);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .sidebar-header img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                border: 2px solid var(--primary-color);
            }

            .sidebar-header h2 {
                font-size: 0.95rem;
                font-weight: 700;
                color: #1f2937;
                margin: 0;
            }

        .sidebar-nav {
            padding: 0.75rem;
            flex: 1;
        }

            .sidebar-nav ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                flex-direction: column;
                gap: 0.25rem;
            }

            .sidebar-nav a {
                display: flex;
                align-items: center;
                gap: 0.75rem;
                height: 45px;
                padding: 0 0.75rem;
                border-radius: 0.5rem;
                color: #4b5563;
                text-decoration: none;
                font-size: 0.875rem;
                font-weight: 500;
                transition: all 0.2s;
            }

                .sidebar-nav a:hover {
                    background-color: #f3f4f6;
                    color: #111827;
                }

                .sidebar-nav a.active {
                    background-color: rgba(19, 91, 236, 0.1);
                    color: var(--primary-color);
                    font-weight: 600;
                }

        .main-wrapper {
            margin-left: 256px;
            min-height: 100vh;
        }

        .main-content {
            padding: 2rem;
        }

        .sidebar-footer {
            padding: 0.75rem;
            border-top: 1px solid #e5e7eb;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

            .sidebar-footer a {
                display: flex;
                align-items: center;
                gap: 0.75rem;
                height: 40px;
                padding: 0 0.75rem;
                border-radius: 0.5rem;
                color: #dc2626;
                text-decoration: none;
                font-size: 0.875rem;
                font-weight: 700;
            }

                .sidebar-footer a:hover {
                    background-color: #fee2e2;
                }
    </style>
</head>
<body>
    <aside class="sidebar">
        <div class="sidebar-header">
            <img alt="User Profile" src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=135bec&color=fff" />
            <div>
                <h2>@User.Identity.Name</h2>
                <small class="text-muted" style="font-size: 0.7rem;">Müşteri Paneli</small>
            </div>
        </div>

        <nav class="sidebar-nav">
            <ul>
                <li>
                    <a href="/User/DashboardUser/Index" id="nav-dashboard">
                        <span class="material-symbols-outlined">dashboard</span>
                        <span>Özet Ekranı</span>
                    </a>
                </li>
                <li>
                    <a href="/User/PolicyUser/Index" id="nav-policies">
                        <span class="material-symbols-outlined">description</span>
                        <span>Poliçelerim</span>
                    </a>
                </li>
                <li>
                    <a href="/User/Profile/Index" id="nav-profile">
                        <span class="material-symbols-outlined">person</span>
                        <span>Profil Bilgilerim</span>
                    </a>
                </li>

                <li class="my-2"><hr class="border-light"></li>

                <li>
                    <a href="/">
                        <span class="material-symbols-outlined">home</span>
                        <span>Ana Sayfaya Dön</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="sidebar-footer">
            <form method="POST" action="/Account/Logout" id="logoutForm">
                <a href="/Account/Logout">
                    <span class="material-symbols-outlined">logout</span>
                    <span>Çıkış Yap</span>
                </a>
            </form>
        </div>
    </aside>

    <div class="main-wrapper">
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script>
        // Aktif menü işaretleme
        document.querySelectorAll('.sidebar-nav a').forEach(link => {
            if (window.location.pathname === link.getAttribute('href')) {
                link.classList.add('active');
            }
        });
    </script>
</body>
</html>