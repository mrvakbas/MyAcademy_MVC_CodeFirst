@model List<MyAcademy_MVC_CodeFirst.Data.Entities.Packages>

@{
    int counter = 1;
}

<div class="container-fluid service py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Sigorta Paketlerimiz</h4>
            <h1 class="display-4 mb-4">Kapsamlı Koruma Paketleri</h1>
            <p class="mb-0">Hayatınızın her aşamasında size en uygun sigorta paketini bulun. Güvenilir, uygun fiyatlı ve kapsamlı çözümlerimiz ile huzur içinde yaşayın.</p>
        </div>
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model)
            {
                string imageName = $"blog-{counter}.png";

                <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="service-item">
                        <div class="service-img">
                            <img src="~/Templates/LifeSure-1.0.0/img/@imageName" class="img-fluid rounded-top w-100" alt="">
                            <div class="service-icon p-3">
                                <i class="fa fa-road fa-2x"></i>
                            </div>
                        </div>
                        <div class="service-content p-4">
                            <div class="service-content-inner">
                                <a href="#" class="d-inline-block h4 mb-2">@item.Name</a>
                                <h5 class="text-primary mb-3">₺@item.Price/Yıl <small style="font-size:12px;">Başlayan Fiyatlarla</small></h5>
                                <ul class="list-unstyled mb-4">
                                    <li class="mb-2"><i class="fa fa-check text-success"></i> @item.Item1</li>
                                    <li class="mb-2"><i class="fa fa-check text-success"></i> @item.Item2</li>
                                    <li class="mb-2"><i class="fa fa-check text-success"></i> @item.Item3</li>
                                    <li class="mb-2"><i class="fa fa-check text-success"></i> @item.Item4</li>
                                </ul>
                                <a class="btn btn-primary rounded-pill py-2 px-4" href="#">Devamını Oku</a>
                            </div>
                        </div>
                    </div>
                </div>
                counter++;
            }

            <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.2s">
                <a class="btn btn-primary rounded-pill py-3 px-5" href="#">Tüm Paketleri Gör</a>
            </div>
        </div>
    </div>
</div>
